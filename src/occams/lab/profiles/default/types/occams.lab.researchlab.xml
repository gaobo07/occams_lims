<?xml version="1.0"?>
<object name="occams.lab.researchlab"
   meta_type="Dexterity FTI"
   i18n:domain="occams.lab" xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <!-- Basic metadata -->
  <property name="title" i18n:translate="">OCCAMS: Research Laboratory</property>
  <property name="description"
    i18n:translate="">A Research Laboratory for Inventory of Specimen Aliquot</property>
  <property name="content_icon">++resource++occams.lab/images/microscope-icon.png</property> <!-- navigation_icon.png</property>-->
  <property name="global_allow">False</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
      <element value="occams.lab.specimenblueprint" />
  </property>
  <property name="allow_discussion">False</property>

 <!-- schema interface -->
 <property name="schema">occams.lab.interfaces.IResearchLab</property>

 <!-- class used for content items -->
 <property name="klass">plone.dexterity.content.Container</property>

 <property name="add_permission">occams.lab.AddLab</property>

 <property name="behaviors">
     <element value="plone.app.content.interfaces.INameFromTitle" />
     <element value="plone.app.dexterity.behaviors.metadata.IBasic"/>
     <element value="occams.lab.interfaces.ILabelSheet"/>

 </property>

  <!-- View information -->
  <property name="default_view">view</property>
  <property name="default_view_fallback">False</property>
  <property name="view_methods">
  </property>

  <!-- Method aliases -->
  <alias from="(Default)" to="@@view" />
  <alias from="edit" to="@@edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="@@view" />
  <alias from="ready" to="@@ready" />

<!--   <alias from="prepared" to="@@prepared" />
 -->
<!--    <alias from="checkedin" to="@@checkedin" />
 -->
   <alias from="edit-aliquot" to="@@edit-aliquot" />
  <alias from="checkout" to="@@checkout" />
  <alias from="checkin" to="@@checkin" />
    <alias from="inventory" to="@@inventory" />

  <!-- Actions -->
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/" visible="True">
    <permission value="occams: Aliquot Specimen" />
  </action>

  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
    <permission value="occams: Modify Lab" />
  </action>

  <action title="Ready to Aliquot" action_id="ready" category="object" condition_expr=""
    url_expr="string:${object_url}/ready" visible="True">
    <permission value="occams: Aliquot Specimen" />
  </action>

  <action title="Checkout Queue" action_id="checkout" category="object" condition_expr=""
    url_expr="string:${object_url}/checkout" visible="True">
    <permission value="occams: Check Out Aliquot" />
  </action>

  <action title="Checkin" action_id="checkin" category="object" condition_expr=""
    url_expr="string:${object_url}/checkin" visible="True">
    <permission value="occams: Check In Aliquot" />
  </action>

</object>
