<html i18n:domain="occams.studies" metal:use-macro="load:../master.pt">
  <metal:content-slot fill-slot="content-slot">

    <div metal:use-macro="load: header-toolbar.pt"></div>

    <h1>${context.title}</h1>

    <nav metal:use-macro="load: header-nav.pt"></nav>

    <br />

    <form metal:use-macro="load: filter-aliquot.pt"></form>

    <hr />

    <h2>Specimen to Aliquot Templates</h2>


    <form method="POST">
      <input type="hidden" name="csrf_token" value="${request.session.get_csrf_token()}">

      <table class="table table-bordered table-hover table-striped" tal:condition="has_specimen">
        <thead>
          <tr>
            <!-- TODO remove hardcoded styling -->
            <th style="width: 2%"><input type="checkbox" data-toggle='selectall'/></th>
            <th style="width: 4%" i18n:translate="">Count</th>
            <th style="width: 6%" i18n:translate="">Specimen ID</th>
            <th style="width: 6%" i18n:translate="">Patient</th>
            <th style="width: 12%" i18n:translate="">Study/Cycle</th>
            <th style="width: 12%" i18n:translate="">Aliquot Type</th>
            <th style="width: 4%" i18n:translate="">Volume</th>
            <th style="width: 4%" i18n:translate="">Cell Count</th>
            <th style="width: 10%" i18n:translate="">Storage Date</th>
            <th style="width: 4%" i18n:translate="">Freezer</th>
            <th style="width: 4%" i18n:translate="">Rack</th>
            <th style="width: 4%" i18n:translate="">Box</th>
            <th style="width: 14%" i18n:translate="">Special Instructions</th>
            <th style="width: 18%" i18n:translate="">Notes</th>
          </tr>
        </thead>
        <tbody>
          <tal:draw repeat="draw specimen">
            <tr tal:define="
                subform specimen_form.specimen.entries[repeat['draw'].index].form">
              <td tal:define="field subform.ui_selected">${field(**{'data-toggle': 'select'})}</td>
              <td tal:define="field subform.count">${field(class_='form-control')}</td>
              <td><code>${draw.id}</code></td>
              <td><code>${draw.patient.pid}</code></td>
              <td>${draw.cycle.study.short_title} - ${draw.cycle.week}</td>
              <td tal:define="field subform.aliquot_type_id">
                ${field(class_='form-control js-select2')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.volume">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.cell_amount">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.store_date">
                ${field(class_='form-control js-date', placeholder='YYYY-MM-DD')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.freezer">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.rack">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.box">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.special_instruction">
                ${field(class_='form-control js-select2', data_placeholder='Please select a field')}

                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.notes">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
            </tr>
          </tal:draw>
        <tbody>
      </table>

      <nav tal:define="page_key 'specimenpage'; pager specimen_pager" metal:use-macro="load: specimen-pager.pt"></nav>

      <button
          type="submit"
          class="btn btn-default"
          name="aliquot"
          tal:attributes="disabled not:has_specimen"
          data-toggle="popover"
          data-trigger="hover"
          data-placement="top"
          data-content="sing the selected template, create COUNT aliquot, and place them in the queue below."
          >Create Aliquot</button>
      <button
          type="submit"
          class="btn btn-default"
          name="aliquoted"
          tal:attributes="disabled not:has_specimen"
          data-toggle="popover"
          data-trigger="hover"
          data-placement="top"
          data-html="true"
          data-content="
          <p>Marks selected specimens as aliquoted, and removes them from this view.</p>

          <p><strong>NOTE</strong>: If two templates are based off of the same specimen, marking one of the templates as complete will mark all templates for that specimen as complete.
          If you complete a specimen in error, return to the Arriving specimen view and use the filter at the top of the screen: Select 'Show All Samples', and enter the patient id for the patient in question.
          Saves all changes, and then adds the selected specimen to the print queue</p>"
          >Mark Specimen Aliquoted</button>
    </form>

    <hr />

    <h2 i18n:translate="">Aliquot to be processed</h2>

    <form method="POST">
      <input type="hidden" name="csrf_token" value="${request.session.get_csrf_token()}">

      <table class="table table-bordered table-hover table-striped" tal:condition="has_aliquot">
        <thead>
          <tr>
            <!-- TODO remove hardcoded styling -->
            <th style="width: 2%"><input type="checkbox" data-toggle='selectall'/></th>
            <th style="width: 6%" i18n:translate="">ID</th>
            <th style="width: 4%" i18n:translate="">Label Queue</th>
            <th style="width: 6%" i18n:translate="">Patient</th>
            <th style="width: 12%" i18n:translate="">Study/Cycle</th>
            <th style="width: 12%" i18n:translate="">Type</th>
            <th style="width: 4%" i18n:translate="">Volume</th>
            <th style="width: 4%" i18n:translate="">Cell Count</th>
            <th style="width: 10%" i18n:translate="">Storage Date</th>
            <th style="width: 4%" i18n:translate="">Freezer</th>
            <th style="width: 4%" i18n:translate="">Rack</th>
            <th style="width: 4%" i18n:translate="">Box</th>
            <th style="width: 14%" i18n:translate="">Special Instructions</th>
            <th style="width: 18%" i18n:translate="">Notes</th>
          </tr>
        </thead>
        <tbody>
          <tal:draw repeat="sample aliquot">
            <tr tal:define="
                subform aliquot_form.aliquot.entries[repeat['sample'].index].form">
              <td tal:define="field subform.ui_selected">${field(**{'data-toggle': 'select'})}</td>
              <td><code>${sample.id}</code></td>
              <td>${1 if sample.id in label_queue else None}</td>
              <td><code>${sample.specimen.patient.pid}</code></td>
              <td>${sample.specimen.cycle.study.short_title} - ${sample.specimen.cycle.week}</td>
              <td>${sample.aliquot_type.title}</td>
              <td tal:define="field subform.volume">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.cell_amount">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.store_date">
                ${field(class_='form-control js-date', placeholder='YYYY-MM-DD')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.freezer">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.rack">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.box">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.special_instruction">
                ${field(class_='form-control js-select2', data_placeholder='Please select a field')}

                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
              <td tal:define="field subform.notes">
                ${field(class_='form-control')}
                <div class="text-danger" tal:repeat="error field.errors">${error}</div>
              </td>
            </tr>
          </tal:draw>
        <tbody>
      </table>

      <nav tal:define="page_key 'aliquotpage'; pager aliquot_pager" metal:use-macro="load: specimen-pager.pt"></nav>

      <button
          type="submit"
          class="btn btn-default"
          name="save"
          tal:attributes="disabled not:has_aliquot"
          data-toggle="popover"
          data-trigger="hover"
          data-placement="top"
          data-content="Saves all of the changes entered to the database. This applies to all aliquot, not just selected aliquot. "
          >Save All Changes</button>
      <button
          type="submit"
          class="btn btn-default"
          name="queue"
          tal:attributes="disabled not:has_aliquot"
          data-toggle="popover"
          data-trigger="hover"
          data-placement="top"
          data-content="Saves all changes, and then adds the selected specimen to the print queue"
          >Toggle Print Queue</button>
      <button
          type="button"
          class="btn btn-default"
          name="print"
          data-modal-remote="${request.current_route_path(_route_name='lab_aliquot_labels')}"
          data-modal-target="#modal-target"
          data-toggle="popover"
          data-trigger="hover"
          data-placement="top"
          data-content="Prints labels for the specimen in the print queue"
          tal:attributes="disabled not:has_labels_queued"
        >Print Labels</button>
      <button
          type="submit"
          class="btn btn-default"
          name="checkin"
          tal:attributes="disabled not:has_aliquot"
          data-toggle="popover"
          data-trigger="hover"
          data-placement="top"
          data-html="true"
          data-content="Saves all of the changes entered to the database. Move the selected aliquot to a 'checked in' state."
          >Check-in Aliquot</button>
      <button
          type="submit"
          class="btn btn-default"
          name="checkout"
          data-toggle="popover"
          data-trigger="hover"
          data-placement="top"
          data-content="Saves all of the changes entered to the database. Move the selected aliquot to a 'pending check out' state, and makes them available in the Check out queue."
          tal:attributes="disabled not:has_aliquot"
          >Check-out Aliquot</button>
      <button
          type="button"
          class="btn btn-default"
          name="delete"
          data-modal-remote="${request.current_route_path(_route_name='lab_specimen_add')}"
          data-modal-target="#modal-target"
          data-toggle="popover"
          data-trigger="hover"
          data-placement="top"
          data-content="Saves all of the changes entered to the database. Then *deletes* selected aliquot; this should only be used for aliquot that were never created. "
          tal:attributes="disabled not:has_aliquot"
          >Delete Unused Aliquot</button>
    </form>

    <div id="modal-target" class="modal fade"></div>

  </metal:content-slot>
  <metal:content-slot fill-slot="javascript-extras-slot">
    <script>
      $(function () {
        $('[data-toggle="popover"]').popover();
        $('.js-select2').select2({allowClear: true});
        $('.js-date').datetimepicker({useCurrent: false, pickTime: false, format: 'YYYY-MM-DD'});
      })
    </script>
  </metal:content-slot>
</html>
