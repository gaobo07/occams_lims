<?xml version="1.0"?>
<object name="hive.lab.researchlab"
   meta_type="Dexterity FTI"
   i18n:domain="hive.lab" xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <!-- Basic metadata -->
  <property name="title" i18n:translate="">HIVe: Research Laboratory</property>
  <property name="description"
    i18n:translate="">A Research Laboratory for Inventory of Specimen Aliquot</property>
  <property name="content_icon">++resource++hive.lab/images/microscope-icon.png</property> <!-- navigation_icon.png</property>-->
  <property name="global_allow">False</property>
  <property name="filter_content_types">True</property>  
  <property name="allowed_content_types">
      <element value="hive.lab.specimenblueprint" />
  </property>
  <property name="allow_discussion">False</property>

 <!-- schema interface -->
 <property name="schema">hive.lab.interfaces.lab.IResearchLab</property> 

 <!-- class used for content items -->
 <property name="klass">plone.dexterity.content.Container</property>

 <property name="add_permission">hive.lab.AddLab</property>
 
 <property name="behaviors">
     <element value="plone.app.content.interfaces.INameFromTitle" />
     <element value="plone.app.dexterity.behaviors.metadata.IBasic"/>
     <element value="hive.lab.interfaces.labels.ILabelSheet"/>

 </property>

  <!-- View information -->
  <property name="default_view">view</property>
  <property name="default_view_fallback">False</property>
  <property name="view_methods">
  </property>

  <!-- Method aliases -->
  <alias from="(Default)" to="@@research-view" />
  <alias from="edit" to="@@edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="@@research-view" />
  <alias from="ready" to="@@ready" />

  <alias from="prepared" to="@@prepared" />
  <alias from="checkedin" to="@@checkedin" />
  <alias from="edit-aliquot" to="@@edit-aliquot" />
  <alias from="checkout" to="@@checkout" />
  <alias from="checkin" to="@@checkin" />
  
  <!-- Actions -->
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/" visible="True">
    <permission value="hive: Aliquot Specimen" />
  </action>
  
  <action title="View" action_id="research-view" category="object" condition_expr=""
    url_expr="string:${object_url}/@@research-view" visible="False">
    <permission value="hive: Aliquot Specimen" />
  </action>
  
  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
    <permission value="hive: Modify Lab" />
  </action>

  <action title="Ready to Aliquot" action_id="ready" category="object" condition_expr=""
    url_expr="string:${object_url}/ready" visible="True">
    <permission value="hive: Aliquot Specimen" />
  </action>

 
  <action title="Prepared" action_id="prepared" category="object" condition_expr=""
    url_expr="string:${object_url}/prepared" visible="True">
    <permission value="hive: Manage Aliquot" />
  </action>

  <action title="Completed Today" action_id="checkedin" category="object" condition_expr=""
    url_expr="string:${object_url}/checkedin" visible="True">
    <permission value="hive: Manage Aliquot" />
  </action>

  <action title="Edit Aliquot" action_id="editaliquot" category="object" condition_expr=""
    url_expr="string:${object_url}/edit-aliquot" visible="True">
    <permission value="hive: Modify Aliquot" />
  </action>

  <action title="Checkout Queue" action_id="checkout" category="object" condition_expr=""
    url_expr="string:${object_url}/checkout" visible="True">
    <permission value="hive: Check Out Aliquot" />
  </action>

  <action title="Checkin" action_id="checkin" category="object" condition_expr=""
    url_expr="string:${object_url}/checkin" visible="True">
    <permission value="hive: Check In Aliquot" />
  </action>


</object>
