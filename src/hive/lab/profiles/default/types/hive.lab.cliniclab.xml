<?xml version="1.0"?>
<object name="hive.lab.cliniclab"
   meta_type="Dexterity FTI"
   i18n:domain="hive.lab" xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <!-- Basic metadata -->
  <property name="title" i18n:translate="">HIVe: Clinical Laboratory</property>
  <property name="description"
    i18n:translate="">A Clinical Laboratory for Collection of Specimen</property>
  <property name="content_icon">++resource++hive.lab/images/nurse-icon.png</property> <!-- navigation_icon.png</property>-->
  <property name="global_allow">False</property>
  <property name="filter_content_types">True</property>  
  <property name="allowed_content_types">
      <element value="hive.lab.specimenblueprint" />
  </property>
  <property name="allow_discussion">False</property>

 <!-- schema interface -->
 <property name="schema">hive.lab.interfaces.lab.IClinicalLab</property> 

 <!-- class used for content items -->
 <property name="klass">plone.dexterity.content.Container</property>

 <property name="add_permission">cmf.AddPortalContent</property>
 
 <property name="behaviors">
     <element value="plone.app.content.interfaces.INameFromTitle" />
     <element value="plone.app.dexterity.behaviors.metadata.IBasic"/>
     <element value="hive.lab.interfaces.labels.ILabelSheet"/>

 </property>

  <!-- View information -->
  <property name="default_view">view</property>
  <property name="default_view_fallback">False</property>
  <property name="view_methods">
  </property>

  <!-- Method aliases -->
  <alias from="(Default)" to="@@clinical-view" />
  <alias from="edit" to="@@edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="@@clinical-view" />
  <alias from="batched" to="@@batched" />
  <alias from="postponed" to="@@postponed" />
  <alias from="completed" to="@@complete" />


  <!-- Actions -->
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/" visible="True">
    <permission value="View" />
  </action>

  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
    <permission value="View" />
  </action>

  <action title="Batched" action_id="batched" category="object" condition_expr=""
    url_expr="string:${object_url}/batched" visible="True">
    <permission value="View" />
  </action>

  <action title="Postponed" action_id="postponed" category="object" condition_expr=""
    url_expr="string:${object_url}/postponed" visible="True">
    <permission value="View" />
  </action>

  <action title="Completed Today" action_id="completed" category="object" condition_expr=""
    url_expr="string:${object_url}/complete" visible="True">
    <permission value="View" />
  </action>
</object>
